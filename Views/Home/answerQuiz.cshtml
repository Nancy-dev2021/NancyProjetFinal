@model IEnumerable<ProjetFinal.Models.QuestionQuiz>

@{
    ViewData["Title"] = "answerQuiz";
}

<h1>answerQuiz</h1>

<h4>Quiz numéro @ViewBag.No </h4>

<form>
    <p style="color:red">Les questions sont générées avec avec une vue fortement typées et boucle foreach, mais les options sont hardcodées pour l'instant. À remplacer par une boucle qui itère sur les options de chaque questions de ce quiz</p>

    @foreach (var item in Model)
    {

        <fieldset>

            <legend>@Html.DisplayFor(modelItem => item.Question.Text)</legend>


            @*Remplacer les radio button ci-dessous par une boucle qui itère sur les options de chaque questions*@
            <div>
                <input type="radio" id="option1" name="option1" value="option1"
                       >
                <label for="option1">option1</label>
            </div>

            <div>
                <input type="radio" id="option2" name="option2" value="option2"
                       >
                <label for="option2">option2</label>
            </div>
            <div>
                <input type="radio" id="option3" name="option3" value="option3"
                       >
                <label for="option3">option3</label>
            </div>
            <div>
                <input type="radio" id="option4" name="option4" value="option4"
                       >
                <label for="option4">option4</label>
            </div>

        </fieldset>
    }


</form>    